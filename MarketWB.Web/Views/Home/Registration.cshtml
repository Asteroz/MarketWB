@{
    Layout = null;
}
@model MarketAI.API.Models.UserModel
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Web App - Регистрация</title>

    <!-- META -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- CSS -->
    <link rel="stylesheet" href="~/resources/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/resources/css/other.css">

    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com"> 
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin> 
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap" rel="stylesheet">

    <!-- ICONS -->
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <!-- JS -->
    <script src="~~/resources/js/bootstrap.min.js"></script>
    <script src="~/resources/js/jquery-3.6.0.min.js"></script>
</head>
<body style="overflow:hidden;overflow-y:hidden;">
    <!-- GENERAL WINDOW -->
    <div class="container-fluid">
        <div class="row">
            <!-- LEFT -->
            <div class="col-md-6">
                <div class="figureleft wblogi">
                    <div class="splines2"></div>
                </div>
            </div>

            <!-- RIGHT -->
            <div class="col-md-6">
                <div class="form-log loginpage">
                    <form id="form" asp-action="Register" asp-controller="Users" method="post" class="login-form register-form">
                        <div class="header-login">Регистрация</div>
    
                         <input type="hidden" name="refcode" value="@ViewData["refcode"]">


                        <div class="input-group mb-3">
                            <input type="text" id="phone_field" asp-for="Phone" class="form-control form-lk mobile-lk mobilesendinp" placeholder="Телефон" required>
                            <button class="btn btnprofile wbselfbtn mobilesend" type="button" id="smsButton" onclick="sendCode()">Выслать код</button>
                        </div>

                        <div class="mb-3">
                            <input id="code_field" type="text" class="form-lk mobile-lk" disabled placeholder="6-ти значный код" required>
                        </div>

                        <div class="mb-3">
                            <input id="password_field" type="password" asp-for="Password" class="form-lk mobile-lk" disabled placeholder="Пароль" required>
                        </div>

                        <div class="mb-3">
                            <input id="name_field" type="text" asp-for="Name" class="form-lk mobile-lk" disabled placeholder="Имя" required>
                        </div>
    
                        <div class="mb-3">
                            <input id="email_field" type="email" asp-for="Email" value="@ViewData["email"]" class="form-lk mobile-lk" disabled placeholder="Электронная почта" required>
                        </div>

                        <div class="mb-3">
                            <input id="promocode_field" type="text" asp-for="ActivatedPromocode" class="form-lk mobile-lk" disabled placeholder="Промокод">
                        </div>

                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label class="form-check-label reglabelcheck" for="flexCheckDefault">
                                  Я согласен с правилами использования сервиса
                                </label>
                            </div>
                        </div>

                        <div class="clickers">
                            <button onclick="onFormSubmit()" type="button" disabled class="btnprofile" id="register_btn">Регистрация</button>
                            <a asp-action="Index" asp-controller="Home" class="btnregister">На главную</a>
                        </div>

                        <h6 id="validation_error" style="color:red;text-align:center;margin-top:10px;"></h6>
                    </form>
                </div>
            </div>
        </div>
    </div>

     <script>

        async function sendCode() {
            const phone = document.getElementById('phone_field').value;
            const response = await fetch('/SendSMSCode?toPhone=' + phone);

            let btn = document.getElementById('smsButton');
            let codeField = document.getElementById('code_field');

            document.getElementById('promocode_field').removeAttribute('required');
            document.getElementById('promocode_field').setAttribute('optional','true');

            document.getElementById('code_field').removeAttribute('disabled');

            btn.innerHTML = 'Подтвердить';
            codeField.setAttribute('placeholder', 'Введите 6-значный код');

            btn.onclick = confirmCode;
        }

        async function confirmCode() {
            let phone = document.getElementById('phone_field').value;
            let codeField = document.getElementById('code_field');
            let code = document.getElementById('code_field').value;
            let btn = document.getElementById('smsButton');
            let register_btn = document.getElementById('register_btn');

            console.log('вход');
            console.log(code);

            await fetch('/GetSMSCode?toPhone=' + phone)
                .then((response) => {
                return response.json();
            })
                .then((data) => {

                    console.log(data);

                    if (code.length == 0) {
                        codeField.setAttribute('placeholder', 'Введите 6-значный код');
                    }
                    else if (code == data) {
                        btn.innerHTML = 'Подтверждено';
                        codeField.setAttribute('disabled', 'true');
                        btn.setAttribute('disabled', 'true');


                        document.getElementById('password_field').removeAttribute('disabled');
                        document.getElementById('name_field').removeAttribute('disabled');
                        document.getElementById('email_field').removeAttribute('disabled');
                        document.getElementById('promocode_field').removeAttribute('disabled');

                        document.getElementById('phone_field').setAttribute('readonly', 'true');
                        register_btn.removeAttribute('disabled');
                    }
                    else {
                        codeField.value = 'Неверный код подтверждения';
                    }
                });
        }

        async function onFormSubmit() {
            let phone = document.getElementById('phone_field').value;
            let email = document.getElementById('email_field').value;
            let validation_error = document.getElementById('validation_error');

            await fetch('/CheckUser?login=' + phone)
                .then((response) => {
                    return response.json();
                })
                .then(async (data) => {
                    console.log(data);
                    if (data == 403) {
                        validation_error.innerHTML = 'Пользователь с таким телефоном уже существует';
                    }
                    else {
                        await fetch('/CheckUser?login=' + email)
                            .then((response) => {
                                return response.json();
                            })
                            .then((data) => {
                                console.log(data);
                                if (data == 403) {
                                    validation_error.innerHTML = 'Пользователь с таким email уже существует';
                                }
                                else {
                                    document.getElementById('form').submit();
                                }
                            });
                     }
                });
        }
    </script>


</body>
</html>








@{
    Layout = "_Layout";
}
@model IEnumerable<MarketAI.API.Models.TicketModel>

<!-- start: Content -->
<div id="content">
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Тикеты</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Список тикетов</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Тема</th>
                                    <th>Описание</th>
                                    <th>Тикет закрыт</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Topic</td>
                                        <td>@item.Description</td>
                                        <td>@item.IsClosed</td>
                                        <td><a asp-action="UpdateSubscription" asp-controller="Subscription" asp-route-model="@item"><button class="btn btn-warning">Перейти в тикет</button></a></td>
                                    </tr>

                                }
                                <tr>
                                    <a asp-action="CreateTicket" asp-controller="UserTickets"><input class="submit btn btn-danger" colspan="5" style="margin-top:10px;width:100%;" value="Открыть тикет"></a>
                                </tr>
                            </tbody>
                            
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->

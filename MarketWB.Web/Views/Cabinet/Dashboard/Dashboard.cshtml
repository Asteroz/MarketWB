@using MarketWB.Web.ViewModels.Cabinet.Dashboard
@{
    Layout = "_Layout";
}
@model DashboardVM




    @await Component.InvokeAsync("DashboardHeaderComponent",new {vm = Model})

   

    <div class="container wbcontent">
        <div class="row">
            <div class="dashboard-header">
                <div class="titledash"><i class="las la-columns"></i> Дашборд</div>
                @await Component.InvokeAsync("PeriodsComponent",new {vm = Model})
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <a asp-action="Sales" asp-controller="Dashboard"  class="panelwb">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name">Продажи</div>
                                   @* <div class="upgreen"></div>
                                    <div class="procent">
                                        1,3%
                                    </div>*@
                                </div>

                                <div class="panel-cost">@Convert.ToInt32(Model.DashboardReport.SalesSum) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-pcs">@Model.DashboardReport.SalesCount шт.</div>
                                    <div class="panel-info">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="Сколько продаж и на какую сумму было совершено за выбранный период" class="las la-info-circle"></i>
                                    </div>
                                </div>
                            </div>
                         </a>
                    </div>
                    
                    <div class="col-md-6">
                        <a asp-action="Orders" asp-controller="Dashboard">
                        <div class="panelwb active">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name">Заказы</div>
                                    @*<div class="upgreen"></div>
                                    <div class="procent">
                                        1,3%
                                    </div>*@
                                </div>

                                <div class="panel-cost">@Convert.ToInt32(Model.DashboardReport.OrdersSum) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-pcs">@Model.DashboardReport.OrdersCount шт.</div>
                                    <div class="panel-info">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="Сколько заказов и на какую сумму было совершено за выбранный период" class="las la-info-circle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                         </a>
                    </div>

                    <div class="col-md-6">
                        <a asp-action="Returns" asp-controller="Dashboard">
                        <div class="panelwb active">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name">Возвраты</div>
                                   @* <div class="upgreen"></div>
                                    <div class="procent">
                                        2,3%
                                    </div>*@
                                </div>

                                <div class="panel-cost">-@Convert.ToInt32(Model.DashboardReport.ReturnsSum) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-pcs">-@Model.DashboardReport.ReturnsCount шт.</div>
                                    <div class="panel-info">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="Сколько заказов и на какую сумму были возвращены за выбранный период" class="las la-info-circle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                         </a>
                    </div>

                 
                    <div class="col-md-6">
                        <a asp-action="Cancels" asp-controller="Dashboard">
                        <div class="panelwb active">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name">Отмены</div>
                                   @* <div class="upgreen"></div>
                                    <div class="procent">
                                        1,3%
                                    </div>*@
                                </div>

                                <div class="panel-cost">-@Convert.ToInt32(Model.DashboardReport.CancelsSum) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-pcs">@Model.DashboardReport.CancelsCount шт.</div>
                                    <div class="panel-info">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="От какого количества заказов и на какую сумму покупатели отказались за выбранный период" class="las la-info-circle"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        </a>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="panelwb panelwbcs">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name">Маржинальность %</div>
                                </div>

                                <div class="footer-panel">
                                    <div class="panel-pcs"><div class="opts"></div> Все категории</div>
                                    <div id="circle"><div class="number-circle">@Math.Round(Model.DashboardReport.Marginality,1)</div></div>
                                    <script>
                                    $('#circle').circleProgress({
                                        value: @Math.Round(Model.DashboardReport.Marginality/100,1).ToString().Replace(',','.'),
                                        size: 80,
                                        fill: {
                                        gradient: ["#4F46BA"]
                                        }
                                    });
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


            <div class="col-md-6">
                <div class="content-diagram">
                    <div class="header-diagram">
                        <div class="title-diagram">
                            Продажи по дням

                            <ul class="nav nav-pills mb-3 justify-content-end wbswitchdia" id="pills-tab" role="tablist">
                                <li class="nav-item" role="presentation">
                                  <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">₽</button>
                                </li>
                                <li class="nav-item" role="presentation">
                                  <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">шт</button>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="tab-content" id="pills-tabContent">
                        <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab" tabindex="0">
                            <canvas id="line-chart" width="600" height="400"></canvas>
                        </div>
                        <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab" tabindex="0">
                            <canvas id="line-chart2" width="600" height="400"></canvas>
                        </div>
                      
                    </div>
                    <script>
                        new Chart(document.getElementById("line-chart"), {
                        type: 'line',
                        data: {

                            @{
                                string salesSumLabels = "";
                                string salesSumDateLabels = "";

                                    foreach(var sum in Model.DashboardReport.SalesPriceChartData)
                                    {
                                        salesSumLabels += $"{sum.Value},";
                                        salesSumDateLabels += $"'{sum.Date.ToString("dd.MM.yyyy")}',";
                                    }

                            }


                            labels: [@Html.Raw(salesSumDateLabels)],
                            datasets: [{ 
                                data: [@Html.Raw(salesSumLabels)],
                                label: "Сумма заказов",
                                borderColor: "#4F46BA",
                                fill: true
                            },
                            ]
                        },
                        options: {
                            title: {
                            display: true,
                            text: 'World population per region (in millions)'
                            }
                        }
                        });

                        new Chart(document.getElementById("line-chart2"), {
                        type: 'line',
                        data: {


                             @{
                                string salesCountLabels = "";
                                string salesCountDateLabels = "";

                                    foreach(var sum in Model.DashboardReport.SalesCountChartData)
                                    {
                                        salesCountLabels += $"{sum.Value},";
                                        salesCountDateLabels += $"'{sum.Date.ToString("dd.MM.yyyy")}',";
                                    }

                            }


                            labels: [@Html.Raw(salesCountDateLabels)],
                            datasets: [{ 
                                data: [@Html.Raw(salesCountLabels)],
                                label: "Колөво заказов",
                                borderColor: "#4F46BA",
                                fill: true
                            },
                            ]
                        },
                        options: {
                            title: {
                            display: true,
                            text: 'World population per region (in millions)'
                            }
                        }
                        });
                    </script>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="panelwb panelwbgradient">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name2">Прибыль</div>
                                    <div class="upgreen"></div>
                                    <div class="procent">
                                        1,3%
                                    </div>
                                </div>

                                <div class="panel-cost2">@Convert.ToInt32(Model.DashboardReport.Profit) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-info2">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" data-bs-toggle="tooltip" data-bs-placement="top" title="Сколько заработал продавец за выбранный период с учетом логистики, комиссии и себестоимости." class="las la-info-circle windowapp"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="panelwb panelwbgradient">
                            <div class="panelwb-head">
                                <div class="head-panel">
                                    <div class="name2">Продажи-возврат</div>
                                    <div class="upgreen"></div>
                                    <div class="procent">
                                        1,3%
                                    </div>
                                </div>

                                <div class="panel-cost2">@Convert.ToInt32(Model.DashboardReport.SalesSum  -  Model.DashboardReport.ReturnsSum) ₽</div>
                                <div class="footer-panel">
                                    <div class="panel-info2">
                                        <i data-bs-toggle="tooltip" data-bs-placement="top" title="Общая выручка продавца выручка за выбранный период (продажи минус возвраты)." data-bs-toggle="tooltip" data-bs-placement="top" class="las la-info-circle windowapp"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

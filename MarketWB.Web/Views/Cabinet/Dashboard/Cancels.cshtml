@using MarketWB.Web.ViewModels.Cabinet.Dashboard
@{
    Layout = "_Layout";
}
@model DashboardCancelsVM


<div id="content">
    
    @await Component.InvokeAsync("DashboardHeaderComponent",new {vm = Model})

    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Отмены</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12">

        <div class="col-md-12 top-20 padding-0">
            <div class="col-md-12">
                <div class="panel">
                    <div class="panel-body">
                        <div class="responsive-table">
                            <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>Фото</th>
                                        <th>Название</th>
                                        <th>Цена, ₽</th>
                                        <th>Категория</th>
                                        <th>Утерянная прибыль, ₽</th>
                                        <th>Логистика, ₽</th>
                                        <th>Дата заказа</th>
                                        <th>Дата продажи</th>
                                        <th>Адрес доставки</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model.Report != null)
                                    {
                                        foreach(var row in Model.Report.Rows)
                                        {
                                             <tr>
                                                <td></td>
                                                <td>@row.Title</td>
                                                <td>@row.Price</td>
                                                <td>@row.Category</td>
                                                <td>@row.LostProfit</td>
                                                <td>@row.Logistic</td>
                                                <td>@row.OrderDate</td>
                                                <td>@row.SaleDate</td>
                                                <td>@row.DeliveryAddress</td>
                                             </tr>
                                        }
                                    }      
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div> 
</div>
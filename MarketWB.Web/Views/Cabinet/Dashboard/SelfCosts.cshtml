                </div>
            </div>

        </div>
    </div>

    <script>
         async function CreateRow(){
               var row = document.createElement('tr');
              
               let html = '';
               for (let i =0;i<7;i++){
                   html += '<td><input class="table_input" type="number"/></td>';
               }
               html += ' <td><a><button onclick="DeleteRow(0)" style="btn btn-danger">Удалить</button></a></td>';


               row.innerHTML = html;

               let table_body = document.getElementById('table_body');
               table_body.prepend(row);
         }
    

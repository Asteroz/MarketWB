@using MarketWB.Web.Helpers
@using MarketWB.Web.ViewModels.Cabinet.Dashboard
@{
    Layout = "_Layout";
}
@model DashboardVM

    @{
        var user = await UserHelper.GetUser(User);
    }

 <style>
    .popup-item{
        margin-top: 10px;
        height:30px;
    }
    .popup-close{
        margin-top: -30px !important;
    }
    .popup-error{
       color: red;
       text-align: center;
    }

    .dropdown_item{
        margin-left: 8px;
    }
 </style>

    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Реферальная программа</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12">

        <div class="col-md-12 padding-0">
            <a>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="panel">
                        <div class="panel-heading bg-cyan border-none">
                            <h4>Реферальная ссылка</h4>
                        </div>
                        <div class="panel-body" style="padding-bottom:10px;">
                            <h4>@user.GetRefferalLink()</h4>
                        </div>
                    </div>
                </div>
            </a>
            <a>
                <div class="col-md-6 col-sm-6 col-xs-6">
                   <div class="panel">
                      <div class="panel-heading bg-red border-none">
                        <h4>На счету</h4>
                      </div>
                      <div class="panel-body" style="padding-bottom:10px;">
                        <button data-toggle="modal" data-target="#withdraw" class="btn btn-primary" style="position: absolute; right: 25px">Вывести</button>
                        <h4>@Math.Round(user.ReferralBalance,0)</h4>
                      </div>
                   </div>
                </div>
             </a>

              

            <a>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="panel">
                        <div class="panel-heading bg-blue border-none">
                            <h4>Приглашено людей</h4>
                        </div>
                        <div class="panel-body" style="padding-bottom:10px;">
                            <h4>@user.Referrals.Count </h4>
                        </div>
                    </div>
                </div>
            </a>
            <a>
                <div class="col-md-6 col-sm-6 col-xs-6">
                    <div class="panel">
                        <div class="panel-heading bg-gray-600 border-none">
                            <h4>Оплативших подписку</h4>
                        </div>
                        <div class="panel-body" style="padding-bottom:10px;">
                            <h4>@user.GetPaidRefferalsCount()</h4>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>




       <!-- Popups -->


      <div class="modal" id="withdraw">
             <div class="modal-dialog">
                <div class="modal-content">
                   <!-- Modal Header -->
                   <div class="modal-header">
                      <h4 class="modal-title">Вывод средств</h4>
                      <button type="button" class="close popup-close" data-dismiss="modal">&times;</button>
                   </div>
                   <!-- Modal body -->
                   <div class="modal-body">
                     <div class="form-group popup-item">
                        <label class="col-sm-2 control-label text-right ">Сумма</label>
                        <div class="col-sm-10 popup_item"><input id="promocode" type="number" required class="form-control" name="Name"></div>
                     </div>
                        <div class="form-group popup-item">
                        <label class="col-sm-2 control-label text-right ">Номер карты</label>
                        <div class="col-sm-10 popup_item"><input id="promocode" type="text" required class="form-control" name="Name"></div>
                     </div>
                   </div>
                   <!-- Modal footer -->
                   <div class="modal-footer" >
                        <button type="button" onclick="activatePromocode()" class="btn btn-primary popup_item" data-dismiss="modal">Вывести</button>
                        <button type="button" class="btn btn-light popup_item" data-dismiss="modal">Назад</button>
                   </div>
                </div>
             </div>
          </div>


     <!--end Popups -->
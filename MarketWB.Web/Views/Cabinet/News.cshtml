@using MarketWB.Web.ViewModels.Cabinet
@{
    Layout = "_Layout";
}
@model NewsViewModel


    <!-- start: Content -->


 <div class="container">
      <div class="row">
           @foreach (var tag in Model.Tags)
           {
               
                  <div class="col-md-4">
                      <a asp-action="News" asp-controller="Cabinet" asp-route-tag="@tag">
                      <div class="d-grid">
                        <button class="btn btn-secondary btnnews" type="button">
                          @tag
                        </button>
                      </div>
                        </a>
                  </div>
             
           }
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="dashboard-header wbmargin">
            <div class="titledash"><i class="las la-newspaper"></i> Новости</div>
        </div>
      </div>

   

      
      
               @foreach (var post in Model.Posts)
                     { 
          <div class="row">
            <div class="col-md-12">
                <div class="news">
                    <div class="news-header">
                    <div class="news-title">@post.Caption</div>

                    <div class="news-time">@post.CreatedAt.ToString("dd/MM/yyyy hh:mm")</div>
                    <div class="news-category">@post.Tags</div>
               </div>

               <div class="news-content">
                    <div class="contentflex">
                        <div class="newsleft">
                        <div style="background: url('@post.ImgURL'); background-size: 100%;" class="news-image"></div>
                        </div>
                        <div class="newsright">
                             <div class="news-text">
                                       @post.Description
                             </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
        </div>
        }
   

    </div>
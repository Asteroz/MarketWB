@{
    Layout = "_AdminLayout";
}
@model IEnumerable<MarketAI.API.Models.SubscriptionModel>

<!-- start: Content -->
<div id="content">
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Тарифные планы</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Список тарифных планов</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Название</th>
                                    <th>Стоимость</th>
                                    <th>Кол-во дней</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Title</td>
                                    <td>@item.Price</td>
                                    <td>@item.Days</td>
                                    <td><a asp-action="UpdateSubscription" asp-controller="Subscription" asp-route-id="@item.Id"><button class="btn btn-warning" style="width:80%">Изменить</button></a></td>
                                    <td><a asp-action="DeleteSubscription" asp-controller="Subscription" asp-route-id="@item.Id"><button class="btn btn-danger" style="width:80%">Удалить</button></a></td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->

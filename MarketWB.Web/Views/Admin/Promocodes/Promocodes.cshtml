@{
    Layout = "_AdminLayout";
}
@model IEnumerable<MarketAI.API.Models.PromocodeModel>

<!-- start: Content -->
<div id="content">
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Промокоды</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Список промокодов</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Код</th>
                                    <th>Тип</th>
                                    <th>Значение</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>                  
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Code</td>
                                        <td>
                                            @if(item.Type == MarketAI.Database.Enums.PromocodeType.Percent)
                                            {
                                                <span>Проценты</span>
                                            }
                                            @if(item.Type == MarketAI.Database.Enums.PromocodeType.Value)
                                            {
                                                <span>Сумма</span>
                                            }
                                        </td>
                                        <td>@item.Percent</td>
                                        <td><a asp-action="UpdatePromocode" asp-controller="Promocodes" asp-route-id="@item.Id"><button class="btn btn-warning" style="width:80%">Изменить</button></a></td>
                                        <td><a asp-action="DeletePromocode" asp-controller="Promocodes" asp-route-id="@item.Id"><button class="btn btn-danger" style="width:80%">Удалить</button></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->

@{
    Layout = "_AdminLayout";
}
<!-- start: Css -->
<link rel="stylesheet" type="text/css" href="asset/css/bootstrap.min.css">

<!-- plugins -->
<link rel="stylesheet" type="text/css" href="asset/css/plugins/font-awesome.min.css" />
<link rel="stylesheet" type="text/css" href="asset/css/plugins/icheck/skins/flat/red.css" />
<link rel="stylesheet" type="text/css" href="asset/css/plugins/animate.min.css" />
<link rel="stylesheet" type="text/css" href="asset/css/plugins/summernote.css" />
<link href="asset/css/style.css" rel="stylesheet">
<!-- end: Css -->


<div id="content">
    <div class="col-md-12" style="padding:20px;">
        <div class="panel mail-wrapper">


            <div class="panel-body">
                <div class="col-md-12 padding-0">
                    <div class="col-md-9 col-sm-12 padding-0 mail-right">
                        <div class="mail-right-header col-md-12 col-sm-12">
                            <div class="col-md-2 col-sm-2">
                                <div class="btn-group pull-right right-option-v1">
                                    <i class="fa fa-ellipsis-v right-option-v1-icon" data-toggle="dropdown"></i>
                                    <ul class="dropdown-menu" role="menu">
                                        <li><a href="#">Action</a></li>
                                        <li><a href="#">Another action</a></li>
                                        <li><a href="#">Something else here</a></li>
                                        <li class="divider"></li>
                                        <li><a href="#">Separated link</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mail-right-content" style="padding=left:10px;">
                            <div class="col-md-12 padding-0">
                                <textarea class="summernote hidden" placeholder="Type Your Message.."></textarea>
                            </div>
                            <div class="col-md-12">
                                <div class="pull-right">
                                    <input type="submit" class="btn btn-danger" value="Отправить сообщение" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<!-- start: Javascript -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/jquery.ui.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>


<!-- plugins -->
<script src="~/js/plugins/moment.min.js"></script>
<script src="~/js/plugins/icheck.min.js"></script>
<script src="~/js/plugins/summernote.min.js"></script>
<script src="~/js/plugins/jquery.nicescroll.js"></script>


<!-- custom -->
<script src="~/js/main.js"></script>
<script type="text/javascript">
    (function (jQuery) {
        $('input').iCheck({
            checkboxClass: 'icheckbox_flat-red',
            radioClass: 'iradio_flat-red'
        });

        $('.summernote').summernote({
            height: 750
        });
    })(jQuery);
</script>
<!-- end: Javascript -->
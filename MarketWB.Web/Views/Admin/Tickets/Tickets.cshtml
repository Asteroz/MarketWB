@{
    Layout = "_AdminLayout";
}
@model IEnumerable<MarketAI.API.Models.TicketModel>

<!-- start: Content -->
<div id="content">
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Тикеты</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Список тикетов</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Кем открыт</th>
                                    <th>Тема</th>
                                    <th>Описание</th>
                                    <th>Статус тикета</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.OpenedBy.Email</td>
                                    <td>@item.Topic</td>
                                    <td>@item.Description</td>
                                    <td>
                                            @if (item.IsClosed)
                                            {
                                               <span>Тикет закрыт</span>
                                            }
                                            else
                                            {
                                                <a asp-action="CloseTicket" asp-controller="Tickets" asp-route-ticketId="@item.Id"><button class="btn btn-danger" style="width:92%">Закрыть тикет</button></a>
                                            }
                                    </td>                                 
                                    <td>
                                          @if (!item.IsClosed)
                                          {
                                             <a asp-action="CreateMessage" asp-controller="Tickets" asp-route-ticketId="@item.Id"><button class="btn btn-primary" style="width:92%">Перейти в тикет</button></a>
                                          }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->

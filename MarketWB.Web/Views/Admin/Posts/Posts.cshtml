@{
    Layout = "_AdminLayout";
}
@model IEnumerable<MarketAI.API.Models.PostModel>

<!-- start: Content -->
<div id="content">
    <div class="panel box-shadow-none content-header">
        <div class="panel-body">
            <div class="col-md-12">
                <h3 class="animated fadeInLeft">Новости</h3>
            </div>
        </div>
    </div>
    <div class="col-md-12 top-20 padding-0">
        <div class="col-md-12">
            <div class="panel">
                <div class="panel-heading"><h3>Список новостных записей</h3></div>
                <div class="panel-body">
                    <div class="responsive-table">
                        <table id="datatables-example" class="table table-striped table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Заголовок</th>
                                    <th>Теги</th>
                                    <th>Текст</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Caption</td>
                                        <td>@item.Tags</td>
                                        <td>@item.Description</td>
                                        <td><a asp-action="UpdatePost" asp-controller="Posts" asp-route-post="@item"><button class="btn btn-warning">Изменить</button></a></td>
                                        <td><a asp-action="DeletePost" asp-controller="Posts" asp-route-id="@item.Id"><button class="btn btn-danger">Удалить</button></a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- end: content -->
